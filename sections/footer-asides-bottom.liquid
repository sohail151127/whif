<style>
  .section-{{ section.id }} {
    padding-top: {{ section.settings.top }}px;
    padding-bottom: {{ section.settings.bottom }}px;
    background-color: {{ section.settings.background }};
    color: rgb(var(--text-color));
    --text-color: {{ section.settings.color.red }},{{ section.settings.color.green }},{{ section.settings.color.blue }};
  }

  @media (max-width: 768px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.mobile_top }}px;
      padding-bottom: {{ section.settings.mobile_bottom }}px;
    }
  }
</style>

<div class="section-{{ section.id }} footer">
  <div class="footer__aside-bottom container">
    <p class="footer__copyright text-sm text-subdued">Â© {{ 'now' | date: '%Y' }}, {{ shop.name }} {{ section.settings.text }}</p>

    {% if section.settings.menu != blank %}
      {% assign menu = linklists[section.settings.menu] %}
      <div class="small-hide">
        <ul class="footer-bottom--menu">
          {% for link in menu.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Footer Bottom",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Text Color"
      },
      {
        "type": "inline_richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Bottom Menu"
      },
      {
        "type": "header",
        "content": "Section Padding"
      },
      {
        "type": "number",
        "id": "top",
        "label": "Padding Top"
      },
      {
        "type": "number",
        "id": "bottom",
        "label": "Padding Bottom"
      },
      {
        "type": "number",
        "id": "mobile_top",
        "label": "Mobile Padding Top"
      },
      {
        "type": "number",
        "id": "mobile_bottom",
        "label": "Mobile Padding Bottom"
      }
    ],
    "presets": [
      {
        "name": "Footer Bottom"
      }
    ]
  }
{% endschema %}